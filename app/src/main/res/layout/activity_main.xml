<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutCalcular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="horizontal"
    android:padding="0dp">


    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/button35"
        android:layout_toEndOf="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:background="@drawable/round_button"
        android:text="8"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button35"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/button3"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:background="@drawable/round_button"
        android:text="6"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button8"
        android:background="@drawable/round_button"
        android:text="7"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_button"
        android:onClick="onClickButton"
        android:text="C"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/operation_button"
        android:text="+"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonMinus"
        android:layout_alignStart="@+id/buttonMinus" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/operation_button"
        android:text="-"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/buttonPlus"
        android:layout_alignLeft="@+id/buttonSk"
        android:layout_alignStart="@+id/buttonSk" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:text="2"
        android:textSize="30sp"
        android:layout_above="@+id/button0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonTochka"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:text="."
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:text="4"
        android:textSize="30sp"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:text="1"
        android:textSize="30sp"
        android:layout_below="@+id/button35"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:text="3"
        android:textSize="30sp"
        android:layout_above="@+id/buttonTochka"
        android:layout_toRightOf="@+id/button35"
        android:layout_toEndOf="@+id/button35" />

    <Button
        android:id="@+id/button0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:text="0"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEquals"
        android:textSize="30sp"
        android:background="@drawable/round_button"
        android:layout_above="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_alignTop="@+id/buttonClear"
        android:layout_alignRight="@+id/buttonSk"
        android:layout_alignEnd="@+id/buttonSk" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:text="5"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/button35"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:layout_below="@+id/button8" />

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:text="9"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:layout_alignTop="@+id/button8" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="bottom|right"
        android:text="0"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonClear"
        android:layout_height="90dp" />

    <Button
        android:id="@+id/buttonProiz"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/operation_button"
        android:text="*"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_above="@+id/buttonMinus"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:id="@+id/buttonSk"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/operation_button"
        android:text="/"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:layout_below="@+id/buttonEquals" />

</RelativeLayout>
