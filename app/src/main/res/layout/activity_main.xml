<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/liner1"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">

        <EditText
            android:id="@+id/number1"
            android:layout_width="353dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3E3E3"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDelit"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/operation_button"
                android:onClick="btnClick"
                android:text="/" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:layout_toLeftOf="@+id/btnDelit"
                android:layout_toStartOf="@+id/btnDelit"
                android:background="@drawable/round_button"
                android:onClick="btnClick"
                android:text="9" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/round_button"
                android:onClick="btnClick"
                android:text="7" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@+id/btn5"
                android:layout_toRightOf="@+id/btn5"
                android:background="@drawable/round_button"
                android:onClick="btnClick"
                android:text="8" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn2"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/round_button"
                android:onClick="btnClick"
                android:text="4" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:layout_alignParentTop="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@+id/btn2"
                android:layout_toRightOf="@+id/btn2"
                android:background="@drawable/round_button"
                android:onClick="btnClick"
                android:text="5" />

            <Button
                android:id="@+id/btnUmn"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/operation_button"
                android:onClick="btnClick"
                android:text="*" />

            <Button
                android:id="@+id/btn10"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/btnUmn"
                android:layout_toStartOf="@+id/btnUmn"
                android:background="@drawable/round_button"
                android:onClick="btnClick"
                android:text="6" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/operation_button"
                android:onClick="btnClick"
                android:text="-" />

            <Button
                android:id="@+id/btn17"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@+id/btnMinus"
                android:layout_toStartOf="@+id/btnMinus"
                android:background="@drawable/round_button"

                android:onClick="btnClick"
                android:text="3" />

            <Button
                android:id="@+id/btn19"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/round_button"
                android:onClick="btnClick"
                android:text="1" />

            <Button
                android:id="@+id/btn18"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:layout_toLeftOf="@+id/btn17"
                android:layout_toStartOf="@+id/btn17"
                android:background="@drawable/round_button"
                android:onClick="btnClick"
                android:text="2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonEq"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/btnPlus"
                android:layout_toStartOf="@+id/btnPlus"
                android:onClick="btnClick"
                android:text="=" />

            <Button
                android:id="@+id/btn14"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@+id/btn15"
                android:layout_toRightOf="@+id/btn15"
                android:background="@drawable/round_button"
                android:onClick="btnClick"
                android:text="." />

            <Button
                android:id="@+id/btn15"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignBaseline="@+id/btn14"
                android:layout_alignBottom="@+id/btn14"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/round_button"
                android:onClick="btnClick"
                android:text="0" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/operation_button"
                android:onClick="btnClick"
                android:text="+"
                android:layout_alignBaseline="@+id/btn14"
                android:layout_alignBottom="@+id/btn14"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
