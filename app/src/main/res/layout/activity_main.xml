<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAEBD7"
    android:orientation="horizontal"
    android:padding="0dp">


    <Button
        android:id="@+id/button00"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_button"
        android:text="00"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonResult"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonTochka"
        android:layout_toRightOf="@+id/buttonTochka"
        android:text="="
        android:background="@drawable/round_button"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/button00"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_button"
        android:text="1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_button"
        android:text="4"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button00"
        android:layout_toRightOf="@+id/button00"
        android:background="@drawable/round_button"
        android:text="0"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonResult"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignTop="@+id/button4"
        android:layout_toEndOf="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:text="5"
        android:background="@drawable/round_button"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/button35"
        android:layout_toEndOf="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:background="@drawable/round_button"
        android:text="8"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button35"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/button3"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:background="@drawable/round_button"
        android:text="6"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/button35"
        android:layout_toEndOf="@+id/buttonResult"
        android:layout_toRightOf="@+id/buttonResult"
        android:background="@drawable/round_button"
        android:text="9"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button8"
        android:background="@drawable/round_button"
        android:text="7"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonTochka"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:text="."
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button0"
        android:layout_toEndOf="@+id/button0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:text="2"
        android:textSize="30sp"
        android:layout_below="@+id/buttonResult"
        android:layout_toRightOf="@+id/button00"
        android:layout_toEndOf="@+id/button00" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:text="3"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/buttonResult"
        android:layout_toEndOf="@+id/buttonResult"
        android:layout_below="@+id/buttonResult" />

    <Button
        android:id="@+id/buttonSk"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="( )"
        android:background="@drawable/round_button"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/button3"
        android:layout_toRightOf="@+id/button35"
        android:layout_toEndOf="@+id/button35"
        android:layout_below="@+id/button35" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:background="@drawable/round_button"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/button35"
        android:layout_toRightOf="@+id/button35"
        android:layout_toEndOf="@+id/button35" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:background="@drawable/round_button"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:layout_alignTop="@+id/button9" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:text="0"
        android:gravity="bottom|right"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="160dp" />

</RelativeLayout>
